<h3 class="community-header">My Communities</h3>
<div class="container community-cards-container">
  <% @communities.each do |community| %>
    <div class="container community-card my-4 py-2">
      <%= link_to community_path(community) do %>
        <h5><%= community.name %></h5>
        <div class="community-members d-flex justify-content-center align-items-center">
          <i class="fas fa-users"></i>
          <p><%= community.users.count %></p>
        </div>
        <% if community.owner == current_user %>
          <i class="fas fa-crown owner-tag"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% @requests.each do |request| %>
    <div class="container community-card my-4 py-2">
        <h5><%= request.community.name %></h5>
        <div class="requests d-flex justify-content-around align-items-center">
          <%= link_to 'Deny', decide_path(request: request, accept: false), class: "deny" %>
          <%= link_to 'Accept', decide_path(request: request, accept: true), class: "accept" %>
        </div>
    </div>
  <% end %>
  <%= link_to 'New Community', new_community_path, class: "btn button-sm btn-community" %>
</div>
