<h1>My Entries</h1>
  <% @entries.reverse.each do |entry| %>
    <div class="card_entry">
      <%= link_to entry_path(entry) do %>
        <%#= current_user %>
        <div class="entry-title">
          <h4><%= entry.updated_at.strftime("%b %d, %Y") %></h4>
          <% if entry.mood == 1%>
            <i class="fas fa-meh emoji emoji-entry"></i>
          <% elsif entry.mood == 2 %>
            <i class="fas fa-smile emoji emoji-entry"></i>
          <% elsif entry.mood == 3 %>
            <i class="fas fa-angry emoji emoji-entry"></i>
          <% elsif entry.mood == 4 %>
            <i class="fas fa-frown emoji emoji-entry"></i>
          <% elsif entry.mood == 5 %>
            <i class="fas fa-sad-tear emoji emoji-entry"></i>
          <% elsif entry.mood == 6 %>
            <i class="fas fa-tired emoji emoji-entry"></i>
          <% end %>
        </div>
        <hr>
        <small><%= entry.content %></small>
      <% end %>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="entry-<%= entry.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Share
        </button>
        <div class="dropdown-menu" aria-labelledby="entry-<%= entry.id %>">
          <% current_user.communities.each do |community| %>
            <%= link_to community.name, entry_share_path(entry, community), class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
        <%#= link_to 'Delete entry', entry_path(entry), method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to entry_path(entry), method: :delete, data: { confirm: "Delete post? Are you sure?" }  do %>
          <small><i class="fas fa-minus-circle"></i></small>
        <% end %>
    </div>
  <% end %>
  <%= link_to 'Go back to home page', root_path  %>
