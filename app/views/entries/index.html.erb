<h1>My Entries</h1>
  <% @entries.reverse.each do |entry| %>
    <div class="card_entry">
      <%= link_to entry_path(entry) do %>
        <%#= current_user %>
        <div class="entry-title">
          <h4><%= entry.updated_at.strftime("%b %d, %Y") %></h4>
          <% if entry.mood == 1%>
            <i class="fas fa-meh emoji emoji-entry"></i>
          <% elsif entry.mood == 2 %>
            <i class="fas fa-smile emoji emoji-entry"></i>
          <% elsif entry.mood == 3 %>
            <i class="fas fa-angry emoji emoji-entry"></i>
          <% elsif entry.mood == 4 %>
            <i class="fas fa-frown emoji emoji-entry"></i>
          <% elsif entry.mood == 5 %>
            <i class="fas fa-sad-tear emoji emoji-entry"></i>
          <% elsif entry.mood == 6 %>
            <i class="fas fa-tired emoji emoji-entry"></i>
          <% end %>
        </div>
        <hr>
        <small><%= entry.content %></small>
        <br>
        <hr>
        <small><%= link_to 'Delete entry', entry_path(entry), method: :delete, data: { confirm: "Are you sure?" } %></small>
      <% end %>
      <br>
    </div>
  <% end %>
  <%= link_to 'Go back to home page', root_path  %>
